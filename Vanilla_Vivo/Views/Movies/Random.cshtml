@model Vanilla_Vivo.ViewModels.RandomMovieViewModel


@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var colorName = Model.Customers.Count > 1 ? "red" : "green";
}

<h2 style="color:@colorName">@Model.Movie.Name</h2>

@if(Model.Customers.Count == 0)
{
    <text>No One has rented movie before.</text>
}
else
{
<ul>
@foreach (var customer in Model.Customers)
{
    <li>
       @customer.Name
    </li>
}
</ul>
    
}

